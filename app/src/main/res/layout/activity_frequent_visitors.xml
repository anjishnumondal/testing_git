<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/sub_logo_background"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/subLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subLogo"
        android:layout_centerHorizontal="true"
        android:padding="35dp"
        android:divider="@drawable/vertical_divider"
        android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/employee_border">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#434a56"
                android:padding="10dp"
                android:id="@+id/name_img_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:text="M"
                    android:textColor="#FFFFFF"
                    android:id="@+id/name_img"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/name_img_layout">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:hint="   Full Name"
                    android:textStyle="bold"
                    android:ems="10"
                    android:background="@null"
                    android:id="@+id/name" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/employee_border">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#434a56"
                android:padding="10dp"
                android:id="@+id/phone_img_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:text="M"
                    android:textColor="#FFFFFF"
                    android:id="@+id/phone_img"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/phone_img_layout">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:hint="   Mobile Number"
                    android:textStyle="bold"
                    android:ems="10"
                    android:id="@+id/phone"
                    android:layout_weight="1"
                    android:background="@null"/>
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Add"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:background="#ff8500"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visitors List"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/board_border">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/visitor_name"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:id="@+id/edit"/>

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:id="@+id/remove"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/phone_img1"
                    android:paddingRight="10dp"
                    android:text="P"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp"
                    android:text="Medium Text"
                    android:paddingLeft="15dp"
                    android:id="@+id/phone_show"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>